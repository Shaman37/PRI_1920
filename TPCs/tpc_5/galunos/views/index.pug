extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-indigo.w3-center
                 h3 Lista de Alunos
            
            .w3-container
              table.w3-table-all.w3-hoverable
                    <thead>
                      tr.w3-black
                        th Número de Aluno
                        th Nome
                        th Curso
                        th Email  
                        th
                    </thead>

                    each aluno in lista
                        tr
                            td= aluno.id_aluno
                            td= aluno.nome
                            td= aluno.curso
                            td= aluno.email
                            td
                                .w3-dropdown-hover
                                    button.w3-button.w3-black Opções
                                        .w3-dropdown-content.w3-bar-block.w3-border     
                                            .w3-bar-item.w3-button.w3-hover-pale-blue(onclick="infoAluno('" + aluno.id_aluno +"')") Info
                                            .w3-bar-item.w3-button.w3-hover-pale-red(onclick="apagaAluno('" + aluno.id_aluno +"')") Remover
            br
            .w3-container.w3-center
              <a href="/alunos" class="w3-button w3-black w3-round-xxlarge">Adicionar Aluno</a>

            footer.w3-container.w3-indigo.w3-center.w3-margin-top
                <p>PRI - TPC 5</p>
