extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-indigo.w3-center
                h3 Registar Aluno

            .w3-container
                        form.w3-container(action='/alunos' method='POST')
                            label
                                b Nome
                            input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                            
                            label
                                b Curso
                            input.w3-input.w3-border.w3-light-grey(type='text' name='curso')

                            label
                                b Email
                            input.w3-input.w3-border.w3-light-grey(type='text' name='email')
                            
                            label
                                b Morada
                            input.w3-input.w3-border.w3-light-grey(type='text' name='morada')

                            br 
                            
                            .w3-center
                                input.w3-btn.w3-green(type='submit' value='Registar')
            
            footer.w3-container.w3-indigo.w3-center.w3-margin-top
                <p>PRI - TPC 5</p>