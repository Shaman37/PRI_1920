extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-indigo.w3-center
                  h1 Lista de Tipologias ~ Teste de PRI 2020
                  
    br
    table.w3-table-all.w3-hoverable
      tr
        th.w3-center.w3-xlarge ID
        th.w3-center.w3-xlarge Sigla
        th.w3-center.w3-xlarge Designação
        th.w3-center.w3-xlarge Estado
      
      each tipologia in lista
        tr(onclick="infoTipologia('" + tipologia.id + "')")
          td.w3-center= tipologia.id

          td.w3-center= tipologia.sigla
          
          td.w3-center= tipologia.designacao

          td.w3-center= tipologia.estado