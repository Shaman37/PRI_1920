extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-row.w3-indigo
                .w3-container.w3-third.w3-left-align  
                    br
                    a(href="../")
                        i.fa.fa-arrow-left.fa-3x

                .w3-container.w3-third.w3-center                        
                  h1 Tipologia ~ Teste PRI 2020
                  br       
                  
    br
    
    hr
    h2.w3-blue.w3-center #{tipologia.designacao} (#{tipologia.sigla})
    hr 

    br
    h3.w3-center 
        b Informações de Atividade
        table.w3-table-all
            tr 
                th.w3-center Estado
                td.w3-center
                    if(tipologia.estado != "Ativa")
                        .w3-text-red= tipologia.estado
                    else 
                        .w3-text-green= tipologia.estado
    br 

    hr

    if(tipologia.dono.length)
        h3.w3-center 
            b Processos dos quais é dono

            table.w3-table-all
                tr 
                    th.w3-center Código
                    th.w3-center Título

                each processo in tipologia.dono
                    tr
                        td.w3-center=processo.codigo
                        td.w3-center=processo.titulo

    br
    hr
    
    if(tipologia.participante.length)
        h3.w3-center 
            b Processos dos quais é participante
            
            table.w3-table-all
                tr.w3-center
                    th.w3-center Código
                    th.w3-center Título

                each processo in tipologia.participante
                    tr.w3-center
                        td.w3-center=processo.codigo
                        td.w3-center=processo.titulo